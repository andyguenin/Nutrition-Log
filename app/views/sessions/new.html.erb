
<div class = "container">
<div class = "content">
<div class = "row">
<div class = "login-form">

<h1>Sign in</h1>


<%= form_for(:sessions, :url => signin_path) do |f| %>
	<%= f.hidden_field(:redirection_url, :value => @redirection_url) if @redirection_url %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email, :value => @email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>
</div>
</div>
</div>
</div>
